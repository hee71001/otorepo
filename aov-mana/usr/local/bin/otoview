#!/bin/sh

###########################################################
#       
#       oto config view  Program
#
#       Write   : otokata
#       Date    : 2017/03/20
#       UPDate  : 2017/03/20
###########################################################

#######
# ENV #
#######
STRING="$1"
var="$2"


############
# Function #
############
num () {
        cat -n ${var} | sed '/[0-9]..\s*$/d' | sed '/[0-9]\s*$/d' | ag -v "#"
        #cat -n ${var} | sed '/[0-9]..\s*$/d' | sed '/[0-9]\s*$/d' | grep -v "#"
}


###########
# Program #
###########
if [[ "$STRING" =~ ^-[a-z] ]]; then
        #echo "matched"
        while getopts nv option
        do
          case $option in
            n)
              num ;;
            v)
              view ${var} ;;
          esac
        done
        
else
        #echo "unmatched"
        cat ${STRING} |  sed '/^\s*$/d' | ag -v "#"
        #cat ${STRING} |  sed '/^\s*$/d' | grep -v "#"
        exit 1
fi




